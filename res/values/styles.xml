<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/TwitterActionBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/TwitterActionBarTabText</item>
        <item name="android:actionBarTabStyle">@style/Twitter.ActionBar.TabView</item>
    </style>
    
    <!--  Action Bar Backgroud color -->
    <style name="TwitterActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/TwitterTheme.ActionBar.TitleTextStyle</item> 
        <item name="android:background">#55ACEE</item>
    </style>
    
    <!--  Action Bar title text color -->
    <style name="TwitterTheme.ActionBar.TitleTextStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name="Twitter.ActionBar.TabView" parent="android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_bar_background</item>
    </style>
    
    <!--  Action Bar Tab Text color -->
    <style name="TwitterActionBarTabText" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">#55ACEE</item>
    </style>
    
</resources>
